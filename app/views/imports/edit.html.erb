<h1> Import companies </h1>

<table class="table table-condensed">
  <thead>
    <tr>
      <th>Spreedsheet header</th>
      <th>Sample data</th>
    </tr>
  </thead>
  <%= simple_form_for @import do |f| %>
    <% @header.each_with_index do |h, index| %>
      <tr>
        <%= f.input :header, collection: @fields, label: false, :as => :hidden %>
        <td><%= h %></td> 
        <td><%= @sample[index] %></td>
      </tr>
    <% end %>
  <%= f.button :submit, :class => "btn-success" %>
  <% end %>
  
</table>    