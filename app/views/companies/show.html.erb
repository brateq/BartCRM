<%- model_class = Company -%>
<div class="page-header">
  <h1><%= @company.name %></h1>
</div>
<div>
  <p><h3><%= @company.contacts.first.name + ' ' + @company.contacts.first.surname %></h3></p>
  <p><a href="mailto:<%= @company.contacts.first.mobile_number %>"></p>
  <p><%= @company.contacts.first.email %></p>
  <p><%= link_to @company.www, @company.www %></p>
  <p><%= @company.street %></p>
  <p><%= @company.city %></p>
  <p><%= link_to 'More...', company_path(@company) %></p>
</div>
