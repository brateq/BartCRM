<%= simple_form_for @company, html: {class: 'form-horizontal'} do |f| %>
<%= f.input :name, label: 'Company', :autofocus => true %>
  <%= f.simple_fields_for :contacts do |builder| %>
      <%= builder.input :name, placeholder: "First name" %>
      <%= builder.input :surname, placeholder: "Last name" %>
      <%= builder.input :mobile_number %>
      <%= builder.input :email %>
      <%= builder.input :business_id, :as => :hidden, :input_html => { :value => current_user.business_id } %> <%#= uwaÅ¼aj na przeciek %>
  <% end %>
  <hr>
  <%= f.input :www %>
  <%= f.input :street %>
  <%= f.input :postcode %>
  <%= f.input :city %>
  <%= f.input :decription %>
  <%= f.association :user, label_method: :email, include_blank: false %>
  <%= f.button :submit, :class => "btn-success" %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                companies_path, :class => 'btn' %>

<% end %> 
