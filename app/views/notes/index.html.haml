%h1 Listing notes
%table
  %thead
    %tr
      %th Text
      %th User
      %th Company
      %th Contact
      %th
      %th
      %th
  %tbody
    - @notes.each do |note|
      %tr
        %td= note.text
        %td= note.user_id
        %td= note.company_id
        %td= note.contact_id
        %td= link_to 'Show', note
        %td= link_to 'Edit', edit_note_path(note)
        %td= link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Note', new_note_path