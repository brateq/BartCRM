.col-md-12
  .page-header
    %h4
      Contacts (#{@how_many_contacts})
  .row
    .col-lg-2
      = link_to 'New contact', new_contact_path, class: "btn btn-primary"
    .col-lg-4
      = search_form_for @search do |f|
        .input-group
          = f.text_field :name_cont, :class => "form-control"
          %span.input-group-btn
            = f.submit 'Search', :class => "btn btn-default"
    %br/
    %br/
  %table.table.table-striped
    %thead
      %tr
        %th Name
        %th Mobile number
        %th Office number
        %th City
        %th Email
        %th Company
        %th
    %tbody
      - @contacts.each do |contact|
        %tr
          %td= link_to contact.surname + " " + (contact.name ? contact.name : ''), contact
          %td= contact.mobile_number
          %td= contact.office_number
          %td= contact.city
          %td= contact.dont_call
          %td= contact.email
          %td= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' }