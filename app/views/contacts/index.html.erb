<h1>Listing contacts</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Mobile number</th>
      <th>Office number</th>
      <th>City</th>
      <th>Email</th>
      <th>Company</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= link_to contact.name + " " + contact.surname, contact %></td>
        <td><%= contact.mobile_number %></td>
        <td><%= contact.office_number %></td>
        <td><%= contact.city %></td>
        <td><%= contact.dont_call %></td>
        <td><%= contact.email %></td>
        <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Contact', new_contact_path %>
