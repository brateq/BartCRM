%h1 Listing documents
%table
  %thead
    %tr
      %th User
      %th Company
      %th Contact
      %th Lead
      %th Training
      %th
      %th
      %th
  %tbody
    - @documents.each do |document|
      %tr
        %td= document.user_id
        %td= document.company_id
        %td= document.contact_id
        %td= document.lead_id
        %td= document.training_id
        %td= link_to 'Show', document
        %td= link_to 'Edit', edit_document_path(document)
        %td= link_to 'Destroy', document, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Document', new_document_path