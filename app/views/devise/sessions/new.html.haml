= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => 'form-horizontal' }) do |f|
  = devise_error_messages!
  .form-group
    %label.col-sm-2.control-label{:for => "inputEmail3"} e-mail
    .col-sm-9
      = f.text_field :email, class: "form-control col-sm-10", autofocus: true, id: "person"
      #iperson
  .form-group
    %label.col-sm-2.control-label{:for => "inputPassword3"} password
    .col-sm-9
      = f.password_field :password, class: "form-control col-sm-10"

  .col-sm-2= f.submit 'Login', class: 'btn btn-primary'
  .col-sm-9
    = f.check_box :remember_me
    remember me

.col-sm-12.top-buffer
  = render "devise/shared/links"