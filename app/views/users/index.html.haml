%h1 Listing users
%table.table.table-striped
  %thead
    %tr
      %th Username
      %th Email
      %th Phone
      %th Role
      %th
      %th
      %th
  %tbody
    - @users.each do |user|
      %tr
        %td= user.username
        %td= user.email
        %td= user.phone
        %td= user.role_id
        %td= link_to 'Show', user
        %td= link_to 'Edit', edit_user_path(user)
        %td= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'Add User', new_user_path